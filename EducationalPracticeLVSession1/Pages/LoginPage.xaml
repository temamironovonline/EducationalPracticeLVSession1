<Page x:Class="EducationalPracticeLVSession1.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EducationalPracticeLVSession1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="/Resources/logo.png" Width="150" Margin="0,0,0,20"></Image>

            <StackPanel Margin="0,0,0,5">
                <TextBlock Text="Логин" Margin="0,0,5,0"></TextBlock>
                <TextBox Name="loginInput" Width="150"></TextBox>
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Пароль" Margin="0,0,5,0"></TextBlock>
                <PasswordBox Name="passwordInput" Width="150"></PasswordBox>
            </StackPanel>

            <Button Name="signInUser" Content="Авторизоваться" Margin="0,0,0,10" Click="signInUser_Click"></Button>

            <Button Name="signInGuest" Content="Войти как гость" Click="signInGuest_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
